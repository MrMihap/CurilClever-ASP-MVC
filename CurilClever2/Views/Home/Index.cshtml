@using CurilClever2.ViewModels
@model HomePageViewModel
@{
  ViewData["Title"] = "Index";
}
<div class="jumbotron text-center">
  <h2>Index</h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="table table-striped table-hover">
        <tr>
          <td>Фио Клиента</td>
          <td>Отель</td>
          <td>Стоимость</td>
        </tr>

        @foreach (Order order in Model.Orders)
        {
          <tr>
            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@order.id">@order.Client.FIO </a></td>
            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@order.id">@order.Hotel.Name</a></td>
            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@order.id">@order.Price</a></td>
          </tr>
        }
      </table>
    </div>
    <div class="col-md-4"><p>Column 2</p></div>
    <div class="col-md-4"><p>Column 3</p></div>
  </div>
  <div class="row">
    <div class="col-md-12"><p>Column 5</p></div>
  </div>
</div>


@model List<Hotel>
@{
    ViewData["Title"] = "Отели";
}

<h2>Управление отелями</h2>
<div>
    <p>
        @Html.ActionLink("ДОБАВИТЬ ОТЕЛЬ", "AddHotel", "Home", new { @class = "create-hotel-link" }, null)
    </p>
</div>
<div class='hotelstablecontainer'>
    <table border="1">

        <tr>
            <td><b>Отель</b></td>
            <td><b>Звезды</b></td>
            <td><b>Стоимость одного дня</b></td>
            <td><b>Адрес</b></td>
            <td><b>Расположение</b></td>
            <td><b>Действия</b></td>
        </tr>
        @if (Model.Count == 0)
        {
           <tr>
               <td colspan="6"> Отелей в базе нет!

               </td>
           </tr>
        }

    </table>
</div>
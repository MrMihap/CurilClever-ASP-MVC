@model List<Hotel>
<h2>Все отели</h2>
<table border="1">

  <tr>
    <td><b>Отель</b></td>
    <td><b>Звезды</b></td>
    <td><b>Стоимость одного дня</b></td>
    <td><b>Адрес</b></td>
    <td><b>Действия</b></td>
  </tr>
  @if (Model.Count == 0)
  {
    <tr>
      <td colspan="5">
        Отелей в базе нет!

      </td>
    </tr>
  }
  @foreach (Hotel hotel in Model)
  {
    <tr>
      <td>@hotel.Name</td>
      <td>@hotel.StarsRate *</td>
      <td>@hotel.Price</td>
      <td>@hotel.Addres</td>
      <td>
        <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#hotelstablecontainer" href="/Hotel/DeleteHotel?id=@hotel.id">Удалить</a>
        |
        @Html.ActionLink("Изменить", "EditHotel", "Hotel", new { id = hotel.id }, null)
      </td>
    </tr>
  }

</table>
